<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".InfoActivity">

    <TextView
            android:text="TextView"
            android:layout_width="@dimen/bmi_info_widthMainTextView"
            android:layout_height="@dimen/bmi_info_heightMainTextView" android:id="@+id/textView10" android:layout_marginTop="@dimen/bmi_info_textViewTopMargins"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/imageView3" android:textAlignment="center" android:textSize="@dimen/bmi_info_textSizeMainTextView"/>

    <TextView
            android:text="TextView"
            android:layout_width="@dimen/bmi_info_widthSecondTextView"
            android:layout_height="@dimen/bmi_info_heightSecondTextView" android:id="@+id/textView11" android:layout_marginTop="@dimen/bmi_info_textViewTopMargins"
            android:layout_below="@+id/imageView3" android:layout_toEndOf="@+id/textView10"
            android:layout_alignParentRight="true"
            android:layout_marginStart="@dimen/bmi_info_marginStartSecondTextView" android:textAlignment="center" android:textSize="@dimen/bmi_info_textSizeSecondTextView"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/bmi_info_imageHeight" app:srcCompat="@drawable/bmi_categories_med"
            android:id="@+id/imageView3" android:layout_marginTop="@dimen/bmi_info_imageMarginTop" android:layout_alignParentTop="true"
            android:cropToPadding="true"/>
</RelativeLayout>